<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MyAvaloniaApp.ViewModels"
        x:Class="MyAvaloniaApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Counter App"
        Width="300" Height="200">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
        <TextBlock Text="{Binding Counter}" FontSize="24" HorizontalAlignment="Center"/>
        <Button Content="Increment" Command="{Binding IncrementCommand}" Width="100"/>
    </StackPanel>
</Window>