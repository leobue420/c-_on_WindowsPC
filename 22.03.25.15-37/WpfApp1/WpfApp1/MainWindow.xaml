<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:fa="https://dsaladin.dev/products/fontawesome/wpf/xaml"


        mc:Ignorable="d"
        Title="Nasenbärconverter" 
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="150"/>

        </Grid.RowDefinitions>
        <Border Grid.Row="2" CornerRadius="10" BorderThickness="5" Margin="10,10,10,10" Grid.ColumnSpan="2" >
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ec2075" Offset="0.00"/>
                    <GradientStop Color="BlueViolet" Offset="0.50"/>
                </LinearGradientBrush>

            </Border.BorderBrush>

            <Rectangle Grid.Row="2">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint ="1,0">
                        <GradientStop Color="#e1105f" Offset="0.00"/>
                        <GradientStop Color="Aqua" Offset="0.50"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>

            </Rectangle>

        </Border>


        <StackPanel Orientation="Vertical" Grid.ColumnSpan="2">
            <Label Content="BlueMoonConverter" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="BlueViolet"/>
            <Label Content="DisciplineisImportant" FontSize="20"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Left" Grid.Column="1" Margin="192,0,0,0" Width="38" >
            <Label Content="fffjjfjf" HorizontalAlignment="Center"/>
            <Label Name="WasSollDas" Content="fffjjfjf" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,20,0,0" Grid.ColumnSpan="2" Height="40" Width="699">
            <Label Height="40" Width="354" Content="EnterANumbertobeConverted"  VerticalAlignment="Bottom" Foreground="AliceBlue" FontSize="20" RenderTransformOrigin="0.5,0.5">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.22"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <Label Height="40" Width="150" Content="From:"  VerticalAlignment="Bottom" Foreground="AliceBlue" FontSize="20"/>
            <Label Height="40" Width="195" Content="To:"  VerticalAlignment="Bottom" Foreground="AliceBlue" FontSize="20"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="87,75,0,0" Grid.ColumnSpan="2" Height="75" Width="646">
            <TextBox Name="Teatime" Width="200" Height="30" PreviewTextInput="NumberValidationCheckbox" FontSize="20" VerticalContentAlignment="Center" VerticalAlignment="Top"/>
            <ComboBox Name="ComboboxNameWTF" Width="170" Height="30"  FontSize="20" VerticalAlignment="Top" VerticalContentAlignment="Center" MaxDropDownHeight="150"/>
            <fa:FontAwesomeImage Icon="SolidArrowRight" Foreground="Black" VerticalAlignment="Center" Margin="10,0,10,0" />



            <ComboBox Name="ToCurrency" Width="170" Height="30" FontSize="20" VerticalAlignment="Top" VerticalContentAlignment="Center"  MaxDropDownHeight="150" />
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="238,5,0,145" Grid.ColumnSpan="2" Grid.RowSpan="2" Width="300">
            <Button Name="Convert" Height="40" Width="150" Content="Convert" Click="ConvertClick" Style="{StaticResource ButtonRound}" >
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#ec2075" Offset="0.0"/>
                        <GradientStop Color="MediumPurple" Offset="0.5"/>
                    </LinearGradientBrush>

                </Button.Background>


            </Button>
            <Button x:Name="ResetInput" Height="40" Width="150" Content="ResetInput" Click="ResetClick" Style="{StaticResource ButtonRound}" >
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#ec2075" Offset="0.0"/>
                        <GradientStop Color="MediumPurple" Offset="0.5"/>
                    </LinearGradientBrush>

                </Button.Background>


            </Button>


        </StackPanel>

        <!-- Neues Textfeld für den umgewandelten Wert -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="46" Width="400">
            <!-- Neues Textfeld für den umgewandelten Wert mit einem farblich passenden Border -->
            <Border Width="400" CornerRadius="10" BorderThickness="5">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#ec2075" Offset="0.00"/>
                        <GradientStop Color="BlueViolet" Offset="0.50"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#ec2075" Offset="0.00"/>
                        <GradientStop Color="BlueViolet" Offset="0.50"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label Content="Converted Value:" FontSize="20" Foreground="AliceBlue"/>
                    <TextBox x:Name="ConvertedValue" Width="200" Height="30" FontSize="20" VerticalContentAlignment="Center" IsReadOnly="True"/>
                </StackPanel>
            </Border>
            <!-- Neues Textfeld für den umgewandelten Wert mit einem farblich passenden Border -->
            <!-- Neues Textfeld für den umgewandelten Wert mit einem farblich passenden Border -->
            <!-- Neues Textfeld für den umgewandelten Wert mit einem farblich passenden Border -->
            <!-- Neues Textfeld für den umgewandelten Wert mit einem farblich passenden Border -->

            <!-- Neues Textfeld für den umgewandelten Wert mit einem farblich passenden Border -->


        </StackPanel>



    </Grid>
</Window>
